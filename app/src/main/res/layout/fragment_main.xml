<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/mainColor"
        android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/main_fragment_il_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.cardview.widget.CardView
                android:layout_width="156dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">
                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="start"
                        android:text="@string/il_sum_with_insurance_kpi"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/goldy" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/rubble_icon"
                        android:textColor="@color/black"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/il_sum_with_insurance"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="38dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/il_insurance_kpi_label"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginTop="80dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="156dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">
                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="start"
                        android:text="@string/il_sum_kpi"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/circle_color_1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/rubble_icon"
                        android:textColor="@color/black"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/il_sum"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="38dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="@string/il_sum_label"
                        android:gravity="center"
                        android:layout_marginTop="80dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/creditHistory"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/circle_color_5"
                                android:gravity="center"
                                android:text="@string/il_date_changer_kpi"
                                android:textColor="@color/black"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/commissionBlock" />

                            <TextView
                                android:id="@+id/dateChanger"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/circle_color_4"
                                android:gravity="center"
                                android:text="@string/il_credit_history_kpi"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toEndOf="@+id/commissionBlock"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/commissionBlock"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/circle_color_6"
                                android:gravity="center"
                                android:text="@string/il_commission_block_kpi"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/privateLawyer"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/circle_color_2"
                                android:gravity="center"
                                android:text="@string/il_private_lawyer_kpi"
                                android:textColor="@color/black"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/commissionBlock" />

                            <TextView
                                android:id="@+id/sms"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/circle_color_3"
                                android:gravity="center"
                                android:text="@string/il_sms_kpi"
                                android:textColor="@color/black"
                                app:layout_constraintEnd_toStartOf="@+id/commissionBlock"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:text="@string/il_sms_label"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:layout_marginStart="6dp"
                                app:layout_constraintBottom_toBottomOf="@+id/sms"
                                app:layout_constraintEnd_toStartOf="@+id/sms"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/sms" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/il_private_lawyer_label"
                                android:layout_marginStart="6dp"
                                android:singleLine="false"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:lines="2"
                                app:layout_constraintBottom_toBottomOf="@+id/privateLawyer"
                                app:layout_constraintEnd_toStartOf="@+id/privateLawyer"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/privateLawyer" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/il_credit_history_label"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="@+id/dateChanger"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/dateChanger"
                                app:layout_constraintTop_toTopOf="@+id/dateChanger" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/il_date_changer_label"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:layout_marginEnd="6dp"
                                app:layout_constraintBottom_toBottomOf="@+id/creditHistory"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/creditHistory"
                                app:layout_constraintTop_toTopOf="@+id/creditHistory" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/gp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                app:cardCornerRadius="10dp"
                android:layout_width="156dp"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="start"
                        android:text="@string/gp_sum_kpi"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/circle_color_1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/rubble_icon"
                        android:textColor="@color/black"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gp_sum"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="38dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="@string/gp_sum_label"
                        android:gravity="center"
                        android:layout_marginTop="80dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                app:cardCornerRadius="10dp"
                android:layout_width="156dp"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="start"
                        android:text="@string/gp_sum_with_insurance_kpi"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/goldy" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/rubble_icon"
                        android:textColor="@color/black"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gp_sum_with_insurance"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="38dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gp_sum_with_insurance_label"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:layout_marginTop="80dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="156dp"
                android:layout_height="260dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/gpOptions"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/circle_color_2"
                                android:gravity="center"
                                android:text="@string/gp_options_pack_kpi"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gp_options_pack_label"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:layout_marginStart="6dp"
                                app:layout_constraintBottom_toBottomOf="@+id/gpOptions"
                                app:layout_constraintStart_toEndOf="@+id/gpOptions"
                                app:layout_constraintTop_toTopOf="@+id/gpOptions" />

                            <TextView
                                android:id="@+id/gpSms"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/circle_color_3"
                                android:gravity="center"
                                android:text="@string/gp_sms_kpi"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/gpOptions" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gp_sms_label"
                                android:textColor="@color/black"
                                app:layout_constraintBottom_toBottomOf="@+id/gpSms"
                                app:layout_constraintStart_toEndOf="@+id/gpSms"
                                app:layout_constraintTop_toTopOf="@+id/gpSms"
                                android:layout_marginStart="6dp" />

                            <TextView
                                android:id="@+id/financialCon"
                                android:text="@string/gp_fin_consult_kpi"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/circle_color_4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/gpSms"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="@string/gp_fin_consult_label"
                                android:textColor="@color/black"
                                app:layout_constraintBottom_toBottomOf="@+id/financialCon"
                                app:layout_constraintStart_toEndOf="@+id/financialCon"
                                app:layout_constraintTop_toTopOf="@+id/financialCon" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/circle_color_5"
                                android:gravity="center"
                                android:text="@string/gp_credit_card_sum_kpi"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/financialCon" />

                            <TextView
                                android:id="@+id/gp_credit_card_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gp_credit_card_label"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_marginStart="6dp"
                                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                                app:layout_constraintStart_toEndOf="@+id/textView8"
                                app:layout_constraintTop_toTopOf="@+id/textView8" />
                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/circle_color_6"
                                android:gravity="center"
                                android:text="@string/gp_debit_card_sum_kpi"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView8" />
                            <TextView
                                android:id="@+id/gp_debit_card_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gp_debit_card_label"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_marginStart="6dp"
                                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                                app:layout_constraintStart_toEndOf="@+id/textView9"
                                app:layout_constraintTop_toTopOf="@+id/textView9" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/greyed_blue"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


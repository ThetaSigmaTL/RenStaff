<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_calculator"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mainColor"
    tools:context=".ui.calculator.CalculatorFragment"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_text_loan_term"
            android:layout_marginStart="10dp"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:hint="@string/term_hint_editText"
            android:background="@drawable/tab_backplate"/>
        <EditText
            android:id="@+id/edit_text_loan_sum"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:hint="@string/sum_hint_editText"
            android:maxLength="9"
            android:inputType="numberDecimal"
            android:background="@drawable/tab_backplate"/>
        <EditText
            android:id="@+id/edit_text_down_payment"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:imeOptions="actionDone"
            android:layout_marginStart="6dp"
            android:inputType="numberDecimal"
            android:background="@drawable/tab_backplate"
            android:gravity="center"
            android:hint="@string/downPayment_hint_editText"
            android:maxLength="2" />
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:backgroundTint="@color/mainColor"
            android:src="@drawable/ic_ant_design_select_outlined"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="false"
            android:layout_marginStart="10dp"
            android:background="@drawable/toggle_button_color"

            android:textOn="@string/insurance_label_toggleButton"
            android:textOff="@string/insurance_label_toggleButton" />
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/toggle_button_color"
            android:textOff="@string/privateLawyer_label_toggleButton"
            android:textOn="@string/privateLawyer_label_toggleButton" />
        <ToggleButton
            android:layout_width="match_parent"
            android:background="@drawable/toggle_button_color"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textOn="@string/sms_label_toggleButton"
            android:textOff="@string/sms_label_toggleButton"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textOff="@string/creditHistory_label_toggleButton"
            android:textOn="@string/creditHistory_label_toggleButton"
            android:background="@drawable/toggle_button_color"
            android:layout_weight="1"/>
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/toggle_button_color"
            android:textOn="@string/dateChanger_label_toggleButton"
            android:textOff="@string/dateChanger_label_toggleButton"
            android:layout_weight="1"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="@string/credit_details_label"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/mainColor">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/open_stroke">

            <TextView
                android:id="@+id/textView_monthly_payment_label"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/monthly_payment_label"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/monthly_payment_sum_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/textView_monthly_payment_label"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/monthly_payment_sum_textView"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/final_payment_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_monthly_payment_label"
                android:textColor="@color/black"
                android:text="@string/text_view_final_payment_label"/>
            <TextView
                android:id="@+id/final_payment_sum_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/final_payment_label"
                app:layout_constraintTop_toBottomOf="@id/monthly_payment_sum_textView"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="@string/finaPayment_sum_textView"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/interest_rate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/final_payment_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:text="@string/text_view_interest_rate_label"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/interest_rate_sum_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/interest_rate_label"
                app:layout_constraintTop_toBottomOf="@id/final_payment_sum_textView"
                android:text="@string/interestRate_sum_textView"
                android:textColor="@color/black"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"/>
            <TextView
                android:id="@+id/services_sum_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/interest_rate_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:text="@string/textview_services_sum_label"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/services_sum_textView"
                app:layout_constraintStart_toEndOf="@+id/services_sum_label"
                app:layout_constraintTop_toBottomOf="@id/interest_rate_sum_textView"
                android:text="@string/services_sum_textView"
                android:textColor="@color/black"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/credit_sum_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/services_sum_label"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:text="@string/textView_credit_sum_label"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/credit_sum_label"
                app:layout_constraintTop_toBottomOf="@id/services_sum_textView"
                android:text="@string/credit_sum_textView"
                android:textColor="@color/black"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginStart="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/clear_button"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:backgroundTint="@color/light_brown"/>
        <View
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="1dp"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/addCredit_button"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:backgroundTint="@color/lightGreen"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CalculatorFragment">
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:maxLength="2"
            android:text="36"
            android:hint="Срок"
            android:inputType="number"
            android:background="@drawable/backplate"/>
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:background="@drawable/backplate"
            android:gravity="center"
            android:hint="Сумма"
            android:maxLength="9"
            android:text="1 000 000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_arrow_circle_up_24"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_arrow_circle_down_24"/>
        </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="false"
            android:layout_marginLeft="10dp"
            android:background="@drawable/toggle_button_color"
            android:textOn="Финансовая защита"
            android:textOff="Финансовая защита" />
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/toggle_button_color"
            android:textOff="Личный адвокат"
            android:textOn="Личный адвокат" />
        <ToggleButton
            android:layout_width="match_parent"
            android:background="@drawable/toggle_button_color"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textOn="Комфорт Лайт"
            android:textOff="Комфорт Лайт"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textOff="Идеальный заемщик"
            android:textOn="Идеальный заемщик"
            android:background="@drawable/toggle_button_color"
            android:layout_weight="1"/>
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/toggle_button_color"
            android:textOn="Гибкий график"
            android:textOff="Гибкий график"
            android:layout_weight="1"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:stateListAnimator="@null"
    android:outlineProvider="@null"
    app:elevation="0dp">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:outlineProvider="@null"
        app:elevation="0dp"
        android:id="@+id/toolbar">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="0dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/toolbar_avatar_view"
                android:layout_marginTop="15dp"
                android:layout_width="36dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/greyed_blue"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:src="@drawable/ic_avatar_svgrepo_com"
                android:layout_height="36dp">
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toolbar_username"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <TextView
                android:text="@string/toolbar_bonus_counter"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="100dp"
                android:background="@drawable/bonus_backplate"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/material_motion_duration_long_2"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/ic_baseline_settings_24" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>
